{
    "manifest_version": 3,
    "name": "Jira Card Colors",
    "version": "0.0.0.1",
    "description": "Jira Card Colorizer customizes your Jira board by adding solid or striped backgrounds, adjusting transparency, and supporting colorblind modes for better accessibility.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://*.atlassian.net/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://*.atlassian.net/*"
    ]
}